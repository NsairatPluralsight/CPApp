{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "quotemark": [true, "single", "avoid-escape"],
        "max-line-length": {
            "options": [180]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": true,
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        },
        "variable-name": {
            "options": ["allow-leading-underscore", "ban-keywords", "check-format", "allow-snake-case"]
        }
    },
    "jsRules": {
        "max-line-length": {
            "options": [150]
        }
    }
}